<div class="d-flex justify-content-center">
  <div class="col-lg-6 col-md-8 col-12">
    <% goals.each do |goal| %>
      <div class="border border-1 rounded-1">
        <p class="pt-3 ps-3 mb-0"><%= link_to formatted_text(goal), goal,
                                        class: 'link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover' %></p>
        <div class="ps-3 py-3"><%= render 'shared/task_progress_bar', goal: %></div>
      </div>
    <% end %>
  </div>
</div>
