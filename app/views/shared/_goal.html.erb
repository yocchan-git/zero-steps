<div class="d-flex justify-content-center">
  <div class="col-lg-6 col-md-8 col-12">
    <% goals.each do |goal| %>
        <div class="border border-1 rounded-1">
          <p class="p-3 mb-0"><%= link_to goal.title, goal, class: 'link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover' %></p>
        </div>
    <% end %>
  </div>
</div>
