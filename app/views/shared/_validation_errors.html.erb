<% if resource.errors.any? %>
  <div style="color: red">
    <h2><%= "#{resource.errors.count}があるため、この#{resource.class.model_name.human.downcase}は保存できませんでした" %>:</h2>

    <ul>
      <% resource.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
