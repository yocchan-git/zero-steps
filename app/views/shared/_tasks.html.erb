<% if tasks.empty? %>
  <div class="d-flex justify-content-center mb-3">
    <div class="border-bottom border-bottom-5 mt-2 px-4">
      <% if params[:is_new_goal] %>
        <p class="text-center">
          目標が作成できました！<br>
          次はその目標を叶えるためにタスクを作成しましょう
        </p>
      <% else %>
        <p class="mt-3 mb-1 p-0">タスクがありません</p>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="d-flex justify-content-center">
    <div class="col-lg-6 col-md-8 col-12">
      <div id="new_task_card"></div>

      <% tasks.each do |task| %>
        <%= render 'goals/tasks/task_card', task:, is_tasks_path: true %>
      <% end %>
    </div>
  </div>
<% end %>
