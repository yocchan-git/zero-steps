<% if tasks.empty? %>
  <div class="d-flex justify-content-center mb-3">
    <div class="border-bottom border-bottom-5 m-4 px-4">
      <p class="mb-1 p-0">最近のタスクはありません</p>
    </div>
  </div>
<% else %>
  <div class="d-flex justify-content-center">
    <div class="col-lg-6 col-md-8 col-12">
      <% tasks.each do |task| %>
        <div class="mb-3">
          <div class="border border-2 rounded-1">
            <div class="d-flex justify-content-between">
              <div id="task_info<%= task.id %>" class="p-4">
                <%= render 'goals/tasks/task_info', task:, is_tasks_path: true %>
              </div>

              <div class="p-4">
                <p class="<%= 'text-success' if task.completed_at? %>"><%= task.completed_at? ? "完了(#{l task.completed_at, format: :date})" : '進行中' %></p>
              </div>
            </div>

            <div class="p-3 text-end">
              <% if current_user?(task.user) %>
                <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#taskFormModal<%= task.id %>">
                  <i class="fa-solid fa-pen"></i>
                </button>

                <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#taskDeleteModal<%= task.id %>">
                  <i class="fa-solid fa-trash"></i>
                </button>
              <% end %>
            </div>
          </div>
        </div>

        <div id="task_update_modal<%= task.id %>">
          <%= render 'shared/task_form_modal', task:, is_tasks_path: true %>
        </div>
        <%= render 'shared/task_delete_modal', task: %>
      <% end %>
    </div>
  </div>
<% end %>
