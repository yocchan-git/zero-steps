<div class="d-flex justify-content-center">
  <div class="col-lg-6 col-md-8 col-12">
    <% tasks.each do |task| %>
      <div class="mb-3">
        <div class="border border-2 rounded-1">
          <p class="p-4"><%= link_to task.content, goal_task_path(task, goal_id: goal.id), class: 'link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover' %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
