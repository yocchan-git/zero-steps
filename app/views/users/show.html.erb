<% content_for(:title, 'ユーザー詳細') %>

<div class="text-center mb-5">
  <div class="d-flex justify-content-center mt-3 mb-4">
    <%= image_tag @user.image, class: 'rounded-circle', alt: "#{@user.name}のアイコン", width: 120, height: 120 %>

    <div class="ms-3 my-auto h3"><%= @user.name %></div>
  </div>

  <div class="d-flex justify-content-center">
    <% if current_user?(@user) %>
      <%= link_to '修正する', edit_user_path(current_user), class: 'btn btn-warning px-4 py-2' %>
    <% else %>
      <%= render 'follow_form', user: @user %>
    <% end %>
    <%= link_to '一覧へ戻る', users_path, class: 'btn btn-outline-secondary ms-2 px-3 py-2' %>
  </div>
</div>

<% goal_count = 3 %>
<% goals = @user.goals.order(created_at: :desc).limit(goal_count) %>
<% if goals.present? %>
  <div class="mb-5">
    <h2 class="rounded fs-5 fw-semibold border-start border-5 bg-secondary-subtle border-primary p-2 mb-3">最近の目標</h2>
    <%= render 'shared/goals', goals: %>
  </div>
<% end %>

<% tasks = recent_tasks(@user, task_count: 3) %>
<% if tasks.present? %>
  <div class="mb-5">
    <h2 class="rounded fs-5 fw-semibold border-start border-5 bg-secondary-subtle border-primary p-2 mb-3">最近のタスク</h2>
    <%= render 'shared/tasks', tasks: %>
  </div>
<% end %>

<% comments = recent_comments(@user, comment_count: 3) %>
<% if comments.present? %>
  <h2 class="rounded fs-5 fw-semibold border-start border-5 bg-secondary-subtle border-primary p-2 mb-3">最近のコメント</h2>
  <%= render 'shared/comments', comments: %>
<% end %>
