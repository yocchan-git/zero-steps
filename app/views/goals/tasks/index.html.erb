<div class="d-sm-flex flex-sm-column flex-md-row justify-content-around mb-3">
  <div class="text-center">
    <h1 class="fs-2"><%= @goal.title %>のタスク一覧</h1>
  </div>

  <div class="text-end">
    <%= link_to 'タスクを作成する', new_goal_task_path, class: 'btn btn-primary' %>
  </div>
</div>

<%= render 'shared/task_list', tasks: @tasks, goal: @goal %>

<div class="d-flex justify-content-center">
  <%= paginate @tasks %>
</div>

<div class="d-flex justify-content-center">
  <%= link_to '目標詳細に戻る', @goal, class: 'btn btn-secondary' %>
</div>
