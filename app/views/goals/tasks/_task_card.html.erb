<div class="mb-3">
  <div class="d-flex justify-content-between">
    <div class="col-12">
      <div class="d-flex mb-3">
        <div class="status-circle text-white d-flex align-items-center justify-content-center rounded-circle me-3 <%= task.completed_at? ? 'bg-completed' : 'bg-primary' %>">
          <%= task.completed_at? ? "完了" : '進行中' %>
        </div>

        <div class="card flex-fill">
          <div class="card-body">
            <div class="d-flex justify-content-between mb-0">
              <div class="d-flex align-items-center">
                <div id="task_header<%= task.id %>" class="mb-0">
                  <%= render 'goals/tasks/task_header', task:, is_tasks_path: %>
                </div>
              </div>

              <% if task.completed_at? %>
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                  <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                </svg>
              <% end %>
            </div>

            <% if current_user?(task.user) %>
              <div class="text-end">
                <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#taskFormModal<%= task.id %>">
                  <i class="fa-solid fa-pen"></i>
                </button>

                <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#taskDeleteModal<%= task.id %>">
                  <i class="fa-solid fa-trash"></i>
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="task_update_modal<%= task.id %>">
  <%= render 'shared/task_update_modal', task:, is_tasks_path: %>
</div>
<%= render 'shared/task_delete_modal', task: %>
