<div class="d-sm-flex flex-sm-column flex-md-row justify-content-around mb-3">
  <div>
    <h2 class="fs-3"><%= @task.content %></h2>
  </div>

  <div class="text-end">
    <% if @task.completed_at? %>
      <p class="text-success">完了</p>
    <% else %>
      <%= link_to '終了投稿する', new_task_complete_post_path(@task), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center mb-2">
  <%= link_to '修正する', edit_goal_task_path(@task.goal), class: 'btn btn-warning me-3' %>
  <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
    削除する
  </button>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">「<%= @task.content %>」を削除する</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        本当に削除しますか？
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
        <%= link_to "削除する", goal_task_path(@task.goal), class: 'btn btn-danger me-3', data: { turbo_method: :delete }  %>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center mb-5">
  <%= link_to '目標一覧へ戻る', goal_tasks_path(@task.goal), class: 'btn btn-secondary' %>
</div>

<div class="d-sm-flex flex-sm-column flex-md-row justify-content-around mb-3">
  <h2 class="fs-3">最近のコメント</h2>
  <div class="text-end">
    <%= link_to 'もっと見る', task_comments_path(@task), class: 'link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover' %>
  </div>
</div>

