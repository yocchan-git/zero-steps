<% content_for(:title, 'コメント一覧') %>

<div class="d-sm-flex flex-sm-column flex-md-row justify-content-between mb-3">
  <div>
    <h1 class="fs-2 text-center mb-3"><%= formatted_text(@goal) %>のコメント一覧</h1>
    <p>気軽にいいねやコメントで交流しよう！</p>
  </div>
</div>

<hr class="mb-4">

<div class="text-center mb-3">
  <%= link_to '目標詳細へ', goal_path(@goal), class: 'btn btn-outline-secondary py-2' %>
</div>

<div id="comments">
  <%= render 'shared/comments', comments: @comments %>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @comments %>
</div>

<% unless params[:page] %>
  <div id="comment_form">
    <%= render 'shared/comment_form', commentable: @goal %>
  </div>
<% end %>
