<% request_path = reactionable_path(@reaction) %>
<% reactionable = @reaction.reactionable %>

<%= turbo_stream.update "#{@reaction.reaction_form_id_name}" do %>
  <%= render partial: "shared/unreactions", locals: {reactionable:, request_uri: request_path} %>
<% end %>

<%= turbo_stream.update "#{@reaction.reaction_count_id_name}" do %>
  <%= reactionable.reactions.count %>
<% end %>
