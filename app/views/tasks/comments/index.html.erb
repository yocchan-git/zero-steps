<% content_for(:title, 'コメント一覧') %>

<div class="d-sm-flex flex-sm-column flex-md-row justify-content-around mb-3">
  <div>
    <h1 class="fs-2 text-center mb-3"><%= formatted_text(@task) %>のコメント一覧</h1>
    <p>気軽にいいねやコメントで交流しよう！</p>
  </div>

  <div class="text-end">
    <%= link_to 'タスク詳細へ戻る', goal_task_path(@task, goal_id: @task.goal.id), class: 'btn btn-secondary' %>
  </div>
</div>

<div id="comments">
  <%= render 'shared/comments', comments: @comments %>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @comments %>
</div>

<% unless params[:page] %>
  <div id="comment_form">
    <%= render 'shared/comment_form', commentable: @task %>
  </div>
<% end %>
