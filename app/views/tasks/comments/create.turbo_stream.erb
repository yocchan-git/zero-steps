<% comments = @task.comments.includes(:user).order(created_at: :desc).page(params[:page]).per(5) %>

<%= turbo_stream.update "comments" do %>
  <%= render partial: 'shared/comment', locals: {comments:} %>
<% end %>

<%= turbo_stream.update "comment_form" do %>
  <%= render partial: 'shared/comment_form', locals: {commentable: @task} %>
<% end %>
